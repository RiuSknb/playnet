<h1>投稿を編集</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body, '本文' %>
    <%= form.text_area :body, class: 'form-control', rows: 5 %>
  </div>

  <% if @post.post_type == 'event' %>
    <div class="form-group">
      <%= form.label :place, '開催場所' %>
      <%= form.text_field :place, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :date, '開催日時' %>
      <%= form.datetime_local_field :date, class: 'form-control' %>
    </div>
  <% end %>

  <%= form.submit '更新', class: 'btn btn-primary' %>
<% end %>

<%= link_to '詳細に戻る', post_path(@post), class: 'btn btn-secondary' %>
<%= link_to '日記一覧に戻る', diaries_posts_path, class: 'btn btn-secondary' %>
<%= link_to 'イベント一覧に戻る', diaries_posts_path, class: 'btn btn-secondary' %>